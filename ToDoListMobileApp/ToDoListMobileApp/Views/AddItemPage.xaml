<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoListMobileApp.Views.AddItemPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="UWP" Value="40,200,40,40"/>
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="EntryTitle" Placeholder="Type a task title" HorizontalOptions="FillAndExpand"/>
            <Entry x:Name="EntryDescription" Placeholder="Type a task description" HorizontalOptions="FillAndExpand"/>
            <Button x:Name="ButtonAdd" Text="Add" Clicked="ButtonAdd_Clicked"/>
            <Button x:Name="ButtonCancel" Text="Cancel" Clicked="ButtonCancel_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>